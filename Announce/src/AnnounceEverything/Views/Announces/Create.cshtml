@model AnnounceViewModel


@{
    ViewData["Title"] = "Create";
}

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Title">Título</label>
            <input asp-for="Title" class="form-control" placeholder="Digíte el título">
        </div>

        <div class="form-group">
            <label asp-for="Condition">Condición</label>
            <select asp-for="ConditionId" asp-items="@Model.Condition" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="Province">Condición</label>
            <select asp-for="ProvinceId" asp-items="@Model.Province" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="Price">Precio</label>
            <input asp-for="Price" class="form-control" placeholder="Digíte  el precio">
        </div>

        <div class="form-group">
            <label asp-for="Description">Descripción</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Image">Foto</label>
            <input asp-for="Image" class="form-control" placeholder="Descrición">
        </div>



        <div class="form-group">
            <label asp-for="Categoryid">Categoria</label>
            <select asp-for="Categoryid" asp-items="@Model.Category" class="form-control"></select>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

